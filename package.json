{
  "name": "ace-admin",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/codexlin/vue-ace-admin#readme",
  "engines": {
    "node": "20.x"
  },
  "packageManager": "pnpm@10.14.0",
  "keywords": [
    "vue3",
    "typescript",
    "pinia",
    "vite"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "deploy": "node scripts/deploy.js",
    "deploy:vercel": "node scripts/deploy.js vercel",
    "deploy:netlify": "node scripts/deploy.js netlify",
    "deploy:github": "node scripts/deploy.js github",
    "deploy:docker": "node scripts/deploy.js docker",
    "build:test": "vite build --mode test",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint:eslint": "eslint --fix ./src",
    "lint:prettier": "prettier --write src/",
    "stylelint": "stylelint ./src/**/*.{scss,vue}",
    "stylelint:fix": "stylelint ./src/**/*.{scss,vue} --fix",
    "lint:lint-staged": "lint-staged",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks",
    "commit": "git-cz",
    "dev:docs": "pnpm -C docs dev",
    "build:docs": "pnpm -C docs build",
    "dev:ui": "pnpm -C packages/ui dev",
    "build:ui": "pnpm -C packages/ui build"
  },
  "dependencies": {
    "@ace-admin/ui": "workspace:*",
    "@ace-admin/hooks": "workspace:*",
    "@ant-design/icons-vue": "^7.0.1",
    "@tinymce/tinymce-vue": "^6.1.0",
    "@vueuse/core": "^13.0.0",
    "@vueuse/motion": "^3.0.3",
    "ant-design-vue": "~4.2.6",
    "axios": "^1.8.4",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.5",
    "echarts": "^5.6.0",
    "gsap": "^3.12.5",
    "highlight.js": "^11.10.0",
    "marked": "^13.0.2",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^3.0.1",
    "pinia-plugin-persistedstate": "^4.2.0",
    "radash": "^12.1.0",
    "tinymce": "^7.7.2",
    "tinymce-i18n": "^25.3.17",
    "vue": "~3.5.13",
    "vue-echarts": "latest",
    "vue-i18n": "^11.1.3",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@iconify-json/ep": "^1.2.2",
    "@iconify-json/ion": "^1.2.2",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/ri": "^1.2.5",
    "@iconify/vue": "^4.3.0",
    "@rushstack/eslint-patch": "^1.11.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.19.86",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import-x": "^4.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-vue": "^10.0.0",
    "fast-glob": "3.3.3",
    "lint-staged": "^15.5.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "prettier-stylelint": "^0.4.2",
    "sass": "^1.86.3",
    "simple-git-hooks": "^2.12.1",
    "stylelint": "^16.18.0",
    "stylelint-config-recess-order": "6.0.0",
    "stylelint-config-recommended-vue": "^1.6.0",
    "stylelint-config-standard-scss": "14.0.0",
    "stylelint-scss": "^6.11.1",
    "typescript": "5.5.4",
    "typescript-eslint": "^8",
    "unplugin-auto-import": "^19.1.2",
    "unplugin-icons": "^22.1.0",
    "unplugin-vue-components": "^28.4.1",
    "vite": "^6.2.5",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.8"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint -e $1",
    "pre-push": "pnpm lint:prettier"
  },
  "lint-staged": {
    "src/**/*.{ts,vue,js,tsx,jsx,json}": [
      "pnpm lint:eslint",
      "pnpm lint:prettier"
    ],
    "*.{scss,vue}": [
      "pnpm stylelint:fix"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
