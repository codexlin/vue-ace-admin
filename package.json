{
  "name": "ace-admin",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/xoxosos/vue-ace-admin#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.9.1",
  "keywords": [
    "vue3",
    "typescript",
    "pinia",
    "vite"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build  --mode production",
    "build:test": "vite build  --mode test",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint:eslint": "eslint --fix ./src",
    "lint:prettier": "prettier --write src/",
    "stylelint": "stylelint ./src/**/*.{scss,vue}",
    "stylelint:fix": "stylelint ./src/**/*.{scss,vue} --fix",
    "lint:lint-staged": "lint-staged",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks",
    "commit": "git-cz"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "@tinymce/tinymce-vue": "^6.0.1",
    "@vueuse/core": "^10.11.0",
    "@vueuse/motion": "^2.2.3",
    "ant-design-vue": "~4.2.3",
    "axios": "^1.7.2",
    "dayjs": "^1.11.11",
    "dompurify": "^3.1.6",
    "echarts": "^5.5.1",
    "gsap": "^3.12.5",
    "highlight.js": "^11.10.0",
    "marked": "^13.0.2",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "radash": "^12.1.0",
    "tinymce": "^7.2.1",
    "tinymce-i18n": "^24.7.1",
    "vue": "^3.5",
    "vue-echarts": "latest",
    "vue-i18n": "^10",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@iconify-json/ep": "^1.1.15",
    "@iconify-json/ion": "^1.1.18",
    "@iconify-json/mdi": "^1.1.67",
    "@iconify-json/ri": "^1.1.21",
    "@iconify/vue": "^4.1.2",
    "@rushstack/eslint-patch": "^1.10.3",
    "@tsconfig/node18": "^18.2.4",
    "@types/dompurify": "^3.0.5",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.19.39",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/eslint-config-prettier": "^10",
    "@vue/eslint-config-typescript": "^14",
    "@vue/tsconfig": "^0.5.1",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.3",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-x": "^4",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.28.0",
    "fast-glob": "3.2.11",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.3.2",
    "prettier-stylelint": "^0.4.2",
    "sass": "^1.77.6",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.6.1",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-icons": "^0.19.0",
    "unplugin-vue-components": "^0.27.2",
    "vite": "^5",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-devtools": "^7.3.5",
    "vue-tsc": "^2.0.24"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint -e $1",
    "pre-push": "pnpm lint:prettier"
  },
  "lint-staged": {
    "src/**/*.{ts,vue,js,tsx,jsx,json}": [
      "pnpm lint:eslint",
      "pnpm lint:prettier"
    ],
    "*.{scss,vue}": [
      "pnpm stylelint:fix"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
