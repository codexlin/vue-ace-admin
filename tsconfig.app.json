{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["types/**.d.ts", "src/*", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"]
  }
}
